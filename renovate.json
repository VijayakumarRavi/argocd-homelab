{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "joeypiccola"
  ],
  "ignorePaths": [
    "archive/"
  ],
  "kubernetes": {
    "fileMatch": [
      "argocd/.+\\.ya?ml$"
    ]
  },
  "terraform": {
    "fileMatch": [
      "terraform/.+\\.tf$"
    ]
  }
}

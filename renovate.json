{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "joeypiccola"
  ],
  "ignorePaths": [
    "archive/"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/argocd/.+\\.ya?ml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/argocd/.+\\.ya?ml$/"
    ]
  },
  "terraform": {
    "managerFilePatterns": [
      "/terraform/.+\\.tf$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process various dependencies",
      "managerFilePatterns": [
        "/argocd/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*=?))?\n .*: (?<currentValue>.*=?)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
